<Window x:Class="ManagementCompanyDorogan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управляющая компания - Главная" 
        Height="700" Width="1200"
        FontFamily="Segoe UI"
        Icon="/Resources/logo.png"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#F4E8D3"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка с логотипом -->
        <DockPanel Grid.Row="0" Background="#F4E8D3" Height="80">
            <Image Source="/Resources/logo.png" Width="150" Height="60" Margin="10,0" DockPanel.Dock="Left"/>
            <TextBlock Text="Управляющая компания 'ЖилФонд'" 
                       VerticalAlignment="Center" 
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </DockPanel>

        <!-- Навигация и контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель навигации -->
            <StackPanel Grid.Column="0" Background="#F4E8D3">
                <Button Content="Главная" Height="40" Click="MainButton_Click"/>
                <Button Content="Список заявок" Height="40" Click="RequestsButton_Click"/>
                <Button Content="Добавить заявку" Height="40" Click="AddRequestButton_Click"/>
                <Button Content="История заявок" Height="40" Click="HistoryButton_Click"/>
                <Button Content="Жилой фонд" Height="40" Click="HousingButton_Click"/>
                <Button Content="Собственники" Height="40" Click="OwnersButton_Click"/>
                <Button Content="Платежи" Height="40" Click="PaymentsButton_Click"/>
                <Button Content="Долги" Height="40" Click="DebtsButton_Click"/>
                <Button Content="Выход" Height="40" Click="ExitButton_Click"/>
            </StackPanel>

            <!-- Контентная область -->
            <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>

        <!-- Статус-бар -->
        <StatusBar Grid.Row="2" Background="#F4E8D3">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готово"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>