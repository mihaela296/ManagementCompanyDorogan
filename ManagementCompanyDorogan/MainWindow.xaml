<Window x:Class="ManagementCompanyDorogan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управляющая компания" 
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с кнопкой Назад -->
        <Border Grid.Row="0" Background="#F4E8D3" Padding="10" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка Назад -->
                <Button x:Name="btnBack" 
                        Grid.Column="0" 
                        Content="⬅ Назад" 
                        Width="100" Height="35"
                        Background="#67BA80" Foreground="White"
                        FontSize="13" FontWeight="Bold"
                        Click="btnBack_Click"
                        Margin="10,0"
                        Visibility="Collapsed"
                        ToolTip="Вернуться на предыдущую страницу"
                        Cursor="Hand"/>

                <!-- Заголовок -->
                <TextBlock Grid.Column="1" 
                          x:Name="txtTitle"
                          Text="Управляющая компания"
                          FontSize="18" FontWeight="Bold" 
                          Foreground="#2C3E50"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Контент -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Background="White"
               Navigated="MainFrame_Navigated"/>
    </Grid>
</Window>