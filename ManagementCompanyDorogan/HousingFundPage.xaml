<Page x:Class="ManagementCompanyDorogan.HousingFundPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Жилой фонд" 
      Background="#FFFFFF"
      FontFamily="Segoe UI"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Background="#F4E8D3" Padding="10">
            <StackPanel>
                <TextBlock Text="Жилой фонд управляющей компании" 
                          FontSize="20" FontWeight="Bold"/>

                <WrapPanel Margin="0,10,0,0">
                    <Button Content="🔄 Обновить" Background="#67BA80" 
                            Foreground="White" Padding="10,5" Margin="0,0,10,0"
                            Click="btnRefresh_Click"/>

                    <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <TextBox x:Name="txtSearch" Width="200" Padding="5"
                             TextChanged="txtSearch_TextChanged"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Таблица жилого фонда -->
        <DataGrid x:Name="dgHousing" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="True" IsReadOnly="True"
                  SelectionMode="Single">
        </DataGrid>
    </Grid>
</Page>