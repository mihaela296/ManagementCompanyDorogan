<Page x:Class="ManagementCompanyDorogan.EditRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заявка на ремонт" 
      Background="#FFFFFF"
      FontFamily="Segoe UI"
      Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" MaxWidth="600">
            <TextBlock Text="Форма заявки на ремонт" 
                      FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Адрес -->
            <TextBlock Text="Адрес *" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtAddress" Height="30" Padding="5" FontSize="14"/>

            <!-- Описание проблемы -->
            <TextBlock Text="Описание проблемы *" FontWeight="Bold" Margin="0,15,0,5"/>
            <TextBox x:Name="txtDescription" Height="100" Padding="5" FontSize="14"
                     TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Собственник -->
            <TextBlock Text="Собственник *" FontWeight="Bold" Margin="0,15,0,5"/>
            <ComboBox x:Name="cmbOwner" Height="30" Padding="5" FontSize="14" 
                      IsEditable="True">
                <ComboBoxItem Content="Выберите или введите собственника"/>
            </ComboBox>

            <!-- Статус -->
            <TextBlock Text="Статус заявки *" FontWeight="Bold" Margin="0,15,0,5"/>
            <ComboBox x:Name="cmbStatus" Height="30" Padding="5" FontSize="14">
                <ComboBoxItem Content="Открыта заявка"/>
                <ComboBoxItem Content="Заявка в работе"/>
                <ComboBoxItem Content="Заявка закрыта"/>
            </ComboBox>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" Margin="0,30,0,0" HorizontalAlignment="Right">
                <Button x:Name="btnSave" Content="💾 Сохранить" Width="120" Height="40" 
                        Background="#67BA80" Foreground="White" FontSize="14" FontWeight="Bold"
                        Margin="0,0,10,0" Click="btnSave_Click"/>

                <Button x:Name="btnCancel" Content="❌ Отмена" Width="120" Height="40" 
                        Background="#F4E8D3" FontSize="14"
                        Click="btnCancel_Click"/>
            </StackPanel>

            <!-- Сообщение об ошибке -->
            <TextBlock x:Name="txtMessage" Margin="0,10,0,0" Foreground="Red" 
                       TextWrapping="Wrap" Visibility="Collapsed"/>
        </StackPanel>
    </ScrollViewer>
</Page>