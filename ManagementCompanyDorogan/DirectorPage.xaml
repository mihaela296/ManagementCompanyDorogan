<Page x:Class="ManagementCompanyDorogan.DirectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Руководитель" 
      Background="White"
      FontFamily="Segoe UI">

    <Grid Background="White">
        <TextBlock Text="Панель руководителя" 
                   FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,40,0,0" Foreground="#2C3E50"/>

        <Border Background="#F8F9FA" 
                BorderBrush="#E9ECEF" BorderThickness="2"
                Padding="40" Width="600" Height="400"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Button x:Name="SpisokButton" 
                            Width="250" Height="50" FontSize="14" FontWeight="SemiBold"
                            Background="#67BA80" Foreground="White" BorderThickness="0"
                            Click="SpisokButton_Click" Margin="0,0,20,0" 
                            Cursor="Hand"
                            ToolTip="Просмотр и управление информацией о жилом фонде">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center" 
                                                                Margin="10,5"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#5AA66F"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🏠" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Жилой фонд" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button x:Name="DebtButton" 
                            Width="250" Height="50" FontSize="14" FontWeight="SemiBold"
                            Background="#67BA80" Foreground="White" BorderThickness="0"
                            Click="DebtButton_Click" 
                            Cursor="Hand"
                            ToolTip="Просмотр задолженностей по оплате коммунальных услуг">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center" 
                                                                Margin="10,5"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#5AA66F"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="💰" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Задолженности" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Button x:Name="OtchetButton" 
                            Width="250" Height="50" FontSize="14" FontWeight="SemiBold"
                            Background="#67BA80" Foreground="White" BorderThickness="0"
                            Click="OtchetButton_Click" Margin="0,0,20,0" 
                            Cursor="Hand"
                            ToolTip="Просмотр отчётов по оплате коммунальных услуг">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center" 
                                                                Margin="10,5"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#5AA66F"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Отчёты по оплате" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button x:Name="ApartButton" 
                            Width="250" Height="50" FontSize="14" FontWeight="SemiBold"
                            Background="#67BA80" Foreground="White" BorderThickness="0"
                            Click="ApartButton_Click" 
                            Cursor="Hand"
                            ToolTip="Управление информацией о квартирах">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center" 
                                                                Margin="10,5"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#5AA66F"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🏢" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Квартиры" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Button x:Name="OwnerButton" 
                            Width="250" Height="50" FontSize="14" FontWeight="SemiBold"
                            Background="#67BA80" Foreground="White" BorderThickness="0"
                            Click="OwnerButton_Click"
                            Cursor="Hand"
                            ToolTip="Управление информацией о владельцах квартир">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center" 
                                                                Margin="10,5"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#5AA66F"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="👥" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Владельцы" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <Button x:Name="btnReturnToStart" 
                        Content="Выйти в главное меню" 
                        Width="200" Height="40" FontSize="13"
                        Background="Transparent" 
                        Foreground="#67BA80"
                        BorderBrush="#67BA80" BorderThickness="2"
                        Click="btnReturnToStart_Click"
                        HorizontalAlignment="Center"
                        Margin="0,10"
                        Cursor="Hand"
                        ToolTip="Вернуться к выбору роли">
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>