<Page x:Class="ManagementCompanyDorogan.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная страница" 
      Background="White"
      FontFamily="Segoe UI">

    <Grid Background="#F4E8D3">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добро пожаловать" 
                      FontSize="28" FontWeight="Bold" 
                      Foreground="#2C3E50"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Система управления жилым фондом" 
                      FontSize="16" 
                      Foreground="#495057"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,40"/>

            <!-- Контейнер с выбором роли -->
            <Border Background="White" 
                    Padding="40,30"
                    BorderBrush="#E9ECEF" 
                    BorderThickness="1"
                    Width="400">
                <StackPanel>
                    <TextBlock Text="Выберите вашу роль для продолжения:" 
                              FontSize="18" FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- Кнопка Администратор -->
                    <Button x:Name="btnAdmin" 
                            Content="👨‍💼 АДМИНИСТРАТОР" 
                            Height="60" 
                            Background="#67BA80" Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0"
                            Click="btnAdmin_Click"
                            Margin="0,0,0,15"
                            ToolTip="Доступ к управлению жилым фондом, задолженностями и отчётами"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center" 
                                                                Margin="20,10"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#5AA66F"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Кнопка Руководитель -->
                    <Button x:Name="btnDirector" 
                            Content="👔 РУКОВОДИТЕЛЬ" 
                            Height="60" 
                            Background="#6C757D" Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0"
                            Click="btnDirector_Click"
                            ToolTip="Полный доступ ко всем функциям системы, включая аналитику"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center" 
                                                                Margin="20,10"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#5A6268"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <TextBlock Text="Версия 1.0.0" 
                      FontSize="12" 
                      Foreground="#6C757D"
                      HorizontalAlignment="Center"
                      Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>