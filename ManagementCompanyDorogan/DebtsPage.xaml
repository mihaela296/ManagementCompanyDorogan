<Page x:Class="ManagementCompanyDorogan.DebtsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Задолженности" 
      Background="#FFFFFF"
      FontFamily="Segoe UI"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Background="#F4E8D3" Padding="10">
            <StackPanel>
                <TextBlock Text="Задолженности по коммунальным услугам" 
                          FontSize="20" FontWeight="Bold"/>

                <WrapPanel Margin="0,10,0,0">
                    <Button Content="🔄 Обновить" Background="#67BA80" 
                            Foreground="White" Padding="10,5" Margin="0,0,10,0"
                            Click="btnRefresh_Click"/>

                    <Button Content="⚠️ Крупные долги" Background="#FFCCCC" 
                            Padding="10,5" Margin="0,0,10,0"
                            Click="btnLargeDebts_Click"/>

                    <Button Content="📋 Экспорт" Background="#F4E8D3" 
                            Padding="10,5" Margin="0,0,10,0"
                            Click="btnExport_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Таблица долгов -->
        <DataGrid x:Name="dgDebts" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="True" IsReadOnly="True"
                  SelectionMode="Single" AlternatingRowBackground="#F9F9F9">
        </DataGrid>

        <!-- Статистика -->
        <Border Grid.Row="2" Background="#F4E8D3" Padding="10">
            <WrapPanel>
                <TextBlock Text="Итого долгов:" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock x:Name="txtTotalWater" Text="Вода: 0 ₽" Margin="0,0,20,0"/>
                <TextBlock x:Name="txtTotalElectricity" Text="Электричество: 0 ₽" Margin="0,0,20,0"/>
                <TextBlock x:Name="txtTotalDebt" Text="Всего: 0 ₽" FontWeight="Bold" Foreground="Red"/>
                <TextBlock x:Name="txtDebtCount" Text=" (0 записей)" Margin="10,0,0,0"/>
            </WrapPanel>
        </Border>
    </Grid>
</Page>