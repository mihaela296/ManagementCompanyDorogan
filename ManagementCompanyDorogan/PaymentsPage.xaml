<Page x:Class="ManagementCompanyDorogan.PaymentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Платежи и начисления" 
      Background="#FFFFFF"
      FontFamily="Segoe UI"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Background="#F4E8D3" Padding="10">
            <StackPanel>
                <TextBlock Text="Отчет по оплатам и начислениям" 
                          FontSize="20" FontWeight="Bold"/>

                <WrapPanel Margin="0,10,0,0">
                    <Button Content="🔄 Обновить" Background="#67BA80" 
                            Foreground="White" Padding="10,5" Margin="0,0,10,0"
                            Click="btnRefresh_Click"/>

                    <Button Content="📅 Фильтр по периоду" Background="#F4E8D3" 
                            Padding="10,5" Margin="0,0,10,0"
                            Click="btnFilterPeriod_Click"/>

                    <Button Content="💰 Итоги" Background="#F4E8D3" 
                            Padding="10,5" Margin="0,0,10,0"
                            Click="btnSummary_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Таблица платежей -->
        <DataGrid x:Name="dgPayments" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="True" IsReadOnly="True"
                  SelectionMode="Single" AlternatingRowBackground="#F9F9F9">
        </DataGrid>

        <!-- Статистика -->
        <Border Grid.Row="2" Background="#F4E8D3" Padding="10">
            <WrapPanel>
                <TextBlock Text="Итого:" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock x:Name="txtTotalAccrued" Text="Начислено: 0 ₽" Margin="0,0,20,0"/>
                <TextBlock x:Name="txtTotalPaid" Text="Оплачено: 0 ₽" Margin="0,0,20,0"/>
                <TextBlock x:Name="txtTotalBalance" Text="Баланс: 0 ₽" FontWeight="Bold"/>
            </WrapPanel>
        </Border>
    </Grid>
</Page>