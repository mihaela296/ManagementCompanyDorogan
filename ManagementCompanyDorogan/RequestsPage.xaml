<Page x:Class="ManagementCompanyDorogan.RequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заявки на ремонт" 
      Background="#FFFFFF"
      FontFamily="Segoe UI"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Background="#F4E8D3" Padding="10">
            <StackPanel>
                <TextBlock Text="Заявки на ремонт и обслуживание" 
                          FontSize="20" FontWeight="Bold"/>

                <WrapPanel Margin="0,10,0,0">
                    <Button Content="➕ Новая заявка" Background="#67BA80" 
                            Foreground="White" Padding="10,5" Margin="0,0,10,0"
                            Click="btnAdd_Click"/>

                    <Button Content="🔄 Обновить" Background="#FFFFFF" 
                            Padding="10,5" Margin="0,0,10,0"
                            Click="btnRefresh_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Таблица заявок -->
        <DataGrid x:Name="dgRequests" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="True" IsReadOnly="True"
                  SelectionMode="Single" SelectionChanged="dgRequests_SelectionChanged">
        </DataGrid>
    </Grid>
</Page>