<Page x:Class="ManagementCompanyDorogan.AddEditSpisokPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление/редактирование" 
      Background="White"
      FontFamily="Segoe UI">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40" MaxWidth="500" Background="White">
            <!-- Заголовок -->
            <TextBlock x:Name="txtTitle" Text="Добавление жилого фонда" 
                      FontSize="24" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,30"
                      Foreground="#2C3E50"/>

            <!-- Адрес -->
            <StackPanel Margin="0,15">
                <TextBlock Text="Адрес *" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAddress" Height="35" Padding="8" FontSize="14"
                         BorderBrush="#CCCCCC" BorderThickness="1"
                         ToolTip="Введите полный адрес здания"/>
            </StackPanel>

            <!-- Дата начала управления -->
            <StackPanel Margin="0,15">
                <TextBlock Text="Дата начала управления *" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpStartDate" Height="35" FontSize="14"
                            BorderBrush="#CCCCCC"/>
            </StackPanel>

            <!-- Этажи -->
            <StackPanel Margin="0,15">
                <TextBlock Text="Количество этажей *" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFloors" Height="35" Padding="8" FontSize="14"
                         BorderBrush="#CCCCCC" BorderThickness="1"
                         ToolTip="Введите число этажей"/>
            </StackPanel>

            <!-- Квартиры -->
            <StackPanel Margin="0,15">
                <TextBlock Text="Количество квартир" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtApartments" Height="35" Padding="8" FontSize="14"
                         BorderBrush="#CCCCCC" BorderThickness="1"
                         ToolTip="Введите общее количество квартир"/>
            </StackPanel>

            <!-- Год постройки -->
            <StackPanel Margin="0,15">
                <TextBlock Text="Год постройки *" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtYear" Height="35" Padding="8" FontSize="14"
                         BorderBrush="#CCCCCC" BorderThickness="1"
                         ToolTip="Введите год постройки здания"/>
            </StackPanel>

            <!-- Площадь -->
            <StackPanel Margin="0,15">
                <TextBlock Text="Общая площадь (м²) *" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSquare" Height="35" Padding="8" FontSize="14"
                         BorderBrush="#CCCCCC" BorderThickness="1"
                         ToolTip="Введите общую площадь здания"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" Margin="0,40" HorizontalAlignment="Center">
                <!-- Кнопка Сохранить -->
                <Button x:Name="btnSave" Content="Сохранить" 
                        Width="160" Height="45" FontSize="14" FontWeight="SemiBold"
                        Background="#67BA80" Foreground="White" BorderThickness="0"
                        Click="btnSave_Click" Margin="10" Cursor="Hand"
                        Padding="15,10">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center" 
                                                            Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#5AA66F"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#4C8C5F"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Кнопка Отмена -->
                <Button x:Name="btnCancel" Content="Отмена" 
                        Width="160" Height="45" FontSize="14" FontWeight="SemiBold"
                        Background="#DC3545" Foreground="White" BorderThickness="0"
                        Click="btnCancel_Click" Margin="10" Cursor="Hand"
                        Padding="15,10">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center" 
                                                            Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#C82333"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#A71D2A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Сообщение об ошибке -->
            <Border x:Name="errorBorder" Background="#F8D7DA" Padding="15" Margin="0,20" Visibility="Collapsed">
                <TextBlock x:Name="txtError" Foreground="#721C24" FontSize="14"
                           TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>